frag style
  style:
    .box {
      display: inline-block;
      float: left;
      border: 1px solid black;
      margin-right: 10px;
      margin-bottom: 10px;
    }

    .box p {
      padding: 5px;
    }

    .box h1 {
      font-size: 20pt;
      text-align: center;
      min-width: 200px;
    }

    .box table {
      border-collapse: collapse;
      border-spacing: 0px;
    }

    .box thead {
      border-bottom: 1px solid black;
      border-top: 1px solid black;
    }

    .box td {
      min-width: 90px;
      padding: 5px;
    }

    .box tr.odd {
      background: #DFDFDF;
    }

// TODO: There is currently no way to create lists in bryg, so the following parameters are hard-coded.
frag section(String heading, implicit Closure content, nullable Object colDesc1, nullable Object colDesc2,
             nullable Object colDesc3, nullable Object colDesc4)
  div(class 'box')
    h1 heading
    table
      thead tr
        header(colDesc1)
        header(colDesc2)
        header(colDesc3)
        header(colDesc4)
      content()

// TODO: There is currently no way to create lists in bryg, so the following parameters are hard-coded.
frag row(boolean odd, nullable Object col1, nullable Object col2, nullable Object col3, nullable Object col4)
  tr(class 'odd' if odd)
    cell(col1)
    cell(col2)
    cell(col3)
    cell(col4)

frag header(nullable Object value)
  if value !== null
    th value

frag cell(nullable Object value)
  if value !== null
    td value
